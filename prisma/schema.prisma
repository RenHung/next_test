generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Customer {
  id        Int       @id @default(autoincrement())
  name      String
  email     String
  image_url String
  Invoice   Invoice[]
}

model Invoice {
  id         Int      @id @default(autoincrement())
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId Int
  amount     Float
  status     String
  date       String
}

model Revenue {
  id      Int    @id @default(autoincrement())
  month   String
  revenue Float
}

model LatestInvoice {
  id        Int    @id @default(autoincrement())
  name      String
  image_url String
  email     String
  amount    Float
}
